@model UserGroup.Web.Models.PersonListViewModel


<h1>Person</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var person in Model.Persons)
    {
        <tr>
            <td>@person.Name</td>
            <td>@person.DateAdded</td>
            <td>@person.GroupName</td>
            <td>
                <a class="btn btn-lg" as-page="" asp-route-personId="@person.Id">

                </a>
            </td>
        </tr>
    }
</table>
