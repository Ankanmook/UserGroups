@page "{currentpage=1}/{sortby=Name}"

@using UserGroup.Common

@model UserGroup.Web.Pages.Person.PaginationModel
@{
    ViewData["Title"] = "Pagination";
}

<h1>Pagination &and; Filtering</h1>



<div>
    <span class="font-weight-bold">Elapsed Response Time (milliseconds): </span>
    <span>@Model.ResponseTime</span>
</div>
<br />
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Name:
            <input type="text" asp-for="Name" /> |
            Group:
            <select asp-for="GroupName"
                    asp-items="Model.Groups">
                <option value="">@Constants.All</option>
            </select> |
            Search Option:
            <select asp-for="SearchOption"
                    asp-items="Model.SearchOptions">
            </select> |
            <input type="submit" value="Search" class="btn btn-default" /> |
            @*<span class="input-group-btn">
                    <button class="btn">
                        <i class="fas fa-search"></i>
                    </button>
                </span> |*@
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th><a asp-page="./pagination" class="sort-link" asp-route-sortby="Name">Name</a></th>
            <th><a asp-page="./pagination" class="sort-link" asp-route-sortby="DateAdded">Date Added</a></th>
            <th><a asp-page="./pagination" class="sort-link" asp-route-sortby="Group">Group</a></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DateAdded</td>
                <td>@item.GroupName</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ul class="pagination">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="./pagination" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>

<div>
    <ul class="pagination">
        <li class="page-item @(!Model.ShowFirst? "disabled":"")" title="First">
            <a asp-page="./pagination" asp-all-route-data="@(new Dictionary<string, string>{ { "currentpage", "1" },{ "sortby", Model.SortBy }})" class="page-link"><i class="fas fa-fast-backward"></i></a>
        </li>

        <li class="page-item @(!Model.ShowPrevious? "disabled":"")" title="Previous">
            <a asp-page="./pagination" asp-all-route-data="@(new Dictionary<string, string>{{ "currentpage", (Model.CurrentPage -1).ToString() },{ "sortby", Model.SortBy }})" class="page-link"><i class="fas fa-step-backward"></i></a>
        </li>
        <li class="page-item  @(!Model.ShowNext? "disabled":"")" title="Next">
            <a asp-page="./pagination" asp-all-route-data="@(new Dictionary<string, string>{{ "currentpage", (Model.CurrentPage + 1).ToString() },{ "sortby", Model.SortBy }})" class="page-link"><i class="fas fa-step-forward"></i></a>
        </li>

        <li class="page-item  @(!Model.ShowLast? "disabled":"")" title="Last">
            <a asp-page="./pagination" asp-all-route-data="@(new Dictionary<string, string>{{ "currentpage", Model.TotalPages.ToString() },{ "sortby", Model.SortBy }})" class="page-link"><i class="fas fa-fast-forward"></i></a>
        </li>
    </ul>
</div>