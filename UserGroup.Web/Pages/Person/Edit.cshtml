@page
@model UserGroup.Web.Pages.Person.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@Model.Heading @Model.Person.Name</h2>

<form method="post">

    <input type="hidden" asp-for="Person.Id" />
    <div class="form-group">
        <label asp-for="Person.Name"></label>
        <input asp-for="Person.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Person.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.DateAdded"></label>
        <input asp-for="Person.DateAdded" class="form-control" />
        <span class="text-danger" asp-validation-for="Person.DateAdded"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.GroupId"></label>
        <select asp-for="Person.GroupId" class="form-control"
                asp-items="@(new SelectList(Model.Groups, "Id", "Name"))"></select>
        <span class="text-danger" asp-validation-for="Person.GroupId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}