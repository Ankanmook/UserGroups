@page
@model UserGroup.Web.Pages.Person.DeleteModel
@{
    ViewData["Title"] = "Delete";
}


<h2>Delete @Model.Person.Name</h2>

<div class="alert alert-danger">
    Are you sure you want to delete @Model.Person.Name?
</div>

<div>
    <vc:person-card person="@Model.Person" ></vc:person-card>

    <form method="post">
        <input type="hidden" asp-for="Person.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>


