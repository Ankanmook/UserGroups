@page
@model UserGroup.Web.Pages.Person.DeleteModel
@{
    ViewData["Title"] = "Delete";
}


<h2>Delete @Model.Person.Name</h2>

<div class="alert alert-danger">
    Are you sure you want to delete @Model.Person.Name?
</div>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Name)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Person.GroupName)
        </dd>
        <dt class="col-sm-8">
            @Html.DisplayNameFor(model => model.Person.DateAdded)
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Person.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>


