@page "{personId:int}"
@model UserGroup.Web.Pages.Person.DetailsModel
@{
    ViewData["Title"] = "Details";
}


<h1>@Model.Person.Name Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-4">
            Name
        </dt>
        <dd class="col-sm-4">
            Group
        </dd>
        <dt class="col-sm-4">
            Date Added
        </dt>
    </dl>

    <dl class="row">
        <dt class="col-sm-4">
            @Model.Person.Name
        </dt>
        <dd class="col-sm-4">
            @Model.Person.GroupName
        </dd>
        <dt class="col-sm-4">
            @Model.Person.DateAdded
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Person.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>


