@page "{personId:int}"
@model UserGroup.Web.Pages.Person.DetailsModel
@{
    ViewData["Title"] = "Details";
}


<h1>@Model.Person.Name Details</h1>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Name)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Person.GroupName)
        </dd>
        <dt class="col-sm-8">
            @Html.DisplayNameFor(model => model.Person.DateAdded)
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Person.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>


